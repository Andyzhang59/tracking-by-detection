CC = g++
CCFLAGS = -std=c++11 -g -Wall -pedantic
LDFLAGS =

SOURCES = $(wildcard *.cpp)
OBJECTS = $(SOURCES:.cpp=.o)
TARGET = main.out

COMPILE = $(CC) $(DEPFLAGS) $(CCFLAGS) -c

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) -o $@ $^ $(LDFLAGS) 

%.o: %.cpp %.h
	$(COMPILE) $<

%.o: %.cpp
	$(COMPILE) $<

clean:
	rm -f *.o *.out
	rm *.out.dSYM/*
	rmdir .out.dSYM